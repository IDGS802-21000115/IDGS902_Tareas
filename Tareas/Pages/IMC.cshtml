@page
@model Tareas.Pages.IMCModel
@{
    ViewData["Title"] = "Calculadora de IMC";
}

<h1>@ViewData["Title"]</h1>

<form method="post">
    <div class="form-group">
        <label for="Weight">Peso (kg):</label>
        <input type="number" id="Weight" name="Weight" class="form-control" step="0.01" required />
    </div>
    <div class="form-group">
        <label for="Height">Altura (m):</label>
        <input type="number" id="Height" name="Height" class="form-control" step="0.01" required />
    </div>
    <button type="submit" class="btn btn-primary">Calcular IMC</button>
</form>

@if (Model.BMI > 0)
{
    <h2>Resultado</h2>
    <p>Tu IMC es: @Model.BMI</p>
    <p>Clasificación: @Model.Classification</p>
    <img src="@Model.RecommendationImage"/>
}
